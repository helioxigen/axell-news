{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": false,
        "baseUrl": "./src/",
        "experimentalDecorators": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ]
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules", "./build/**/*"]
}
